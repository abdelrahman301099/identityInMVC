@model IEnumerable<Company>
@{
}
<h1>Home Page for Department</h1>
<table class="table">
    <tr>
        @* <th>@Html.DisplayNameFor(d=>d.ID)</th> *@
        <th>@Html.DisplayNameFor(d => d.Name)</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            @* <td>@item.ID</td> *@
            <td>@item.Name</td>
            <td><a href="~/Company/Edit/@item.ID">Edit</a></td>
            <td><a href="~/Company/Delete/@item.ID">Delete</a></td>
        </tr>
    }
</table>
<a href="~/Company/Create" class="btn btn-primary">Add Company</a>
